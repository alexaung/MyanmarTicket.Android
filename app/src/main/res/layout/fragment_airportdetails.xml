<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/vehicle_bg">
    <!-- everything you already have -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/vehicle_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/vehicle_item_margin"
            android:layout_marginRight="@dimen/vehicle_item_margin"
            android:layout_marginTop="@dimen/vehicle_item_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/vehicle_item_padding_top_bottom"
            android:paddingTop="@dimen/vehicle_item_padding_top_bottom"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/transferTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:text="Transfer"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="17dip"
                android:textStyle="bold"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/lblService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Service : "
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Arrival"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/lblPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Pick-up : "
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="14 Feb 2015 19:00"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/lblFlightNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Flight No. : "
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtFlightNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="14 Feb 2015 19:00"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/lblRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Service : "
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Changi Airport --> Serangoon Road Singapore "
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="15dip" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtNoOfPassengers"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="2dp"
                    android:layout_below="@id/list_image"
                    android:textColor="#343434"
                    android:textSize="15dip"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:gravity="center_vertical|right"
                    android:text="0" />

                <!-- Seating Capacity Image -->
                <ImageView android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_man"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtNoOfLuggage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="2dp"
                    android:layout_below="@id/list_image"
                    android:textColor="#343434"
                    android:textSize="15dip"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:layout_centerVertical="true"
                    android:text="0" />

                <!-- Seating Capacity Image -->
                <ImageView android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_luggage"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/vehicle_item_margin"
            android:layout_marginRight="@dimen/vehicle_item_margin"
            android:layout_marginTop="@dimen/vehicle_item_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/vehicle_item_padding_top_bottom"
            android:paddingTop="@dimen/vehicle_item_padding_top_bottom"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/carTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:text="Vehicle"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dip"
                android:textStyle="bold"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vehicle_item_padding_left_right"
                android:paddingRight="@dimen/vehicle_item_padding_left_right" >
                <!-- Name of Car-->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                    android:text="Car Name"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="20dip"
                    android:textStyle="bold"/>

                <!-- Car Rate -->
                <TextView
                    android:id="@+id/rates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/title"
                    android:gravity="right"
                    android:text="0 USD"
                    android:layout_marginRight="5dip"
                    android:textSize="20dip"
                    android:textColor="#10bcc9"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_communities"/>

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                android:paddingRight="@dimen/vehicle_item_status_pad_left_right"
                android:layout_below="@id/list_image"
                android:textColor="#343434"
                android:textSize="15dip"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Just gona stand there and ..." />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vehicle_item_padding_left_right"
                android:paddingRight="@dimen/vehicle_item_padding_left_right" >

                <TextView
                    android:id="@+id/seating_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="2dp"
                    android:layout_below="@id/list_image"
                    android:textColor="#343434"
                    android:textSize="15dip"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:gravity="center_vertical|right"
                    android:text="0" />

                <!-- Seating Capacity Image -->
                <ImageView android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_man"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/no_of_luggage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/vehicle_item_status_pad_left_right"
                    android:paddingRight="2dp"
                    android:layout_below="@id/list_image"
                    android:textColor="#343434"
                    android:textSize="15dip"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:layout_centerVertical="true"
                    android:text="0" />

                <!-- Seating Capacity Image -->
                <ImageView android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_luggage"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>